{% extends "layout.njk" %}
{% block content %}

<form action="/edit" method="post">

<div class="card" style="width: 100%;">
  <img src="../img/alexandro.png" class="card-img-top" alt="alekandro">
  <p>{{ post.username }}</p>
  <div class="card-body">
    <h5 class="card-title">{{ post.title }}</h5>
    <textarea name="postid" id="postid" cols="0" rows="0" placeholder="postid" hidden>{{ post.id }}</textarea>
        <textarea name="content" id="content" cols="30" rows="10" placeholder="ok ok ok" class="card-text">{{ post.content }}</textarea>
            <button type="submit">Submit changes</button>
  </div>
</div>
<small class="text-muted">{{ post.createdAt }}</small>
</form>
{% endblock %}